    <script>
        $(document).ready(function(){
                
          $(document).on('show','.accordion', function (e) {
          $(e.target).prev('.collapse').addClass('glyphicon-chevron-up');
          alert("show");
          });
    
          $(document).on('hide','.accordion', function (e) {
          $(this).find('.collapse').not($(e.target)).removeClass('glyphicon-chevron-up');
          alert("hide");
          });
                
          $('#accountgrouptable').DataTable( {
            colReorder: true,
            responsive: true,
            pageLength: 50,
                buttons: [
                    'copyHtml5','excelHtml5','csvHtml5','pdfHtml5'
                ],
            columnDefs: [ {
            orderable: false,
            className: 'select-checkbox',
            targets:   0
        } ],
        select: {
            style:    'os',
            selector: 'td:first-child'
        },
        order: [[ 1, 'asc' ]]
                } );
  
        $('#select_all').on('change', function () {
            if ($(this).is(':checked')) {
                $('input.check_list').each(function () {
                    this.checked = true;
                });
            } else {
                $('input.check_list').each(function () {
                    this.checked = false;
                });
            }
        });
        
  });

        function buildDelete()
        { var url = "";
          var first = "";
          $('input.check_list:checkbox:checked').each(function () {
          if (!first)
          { first = $(this).val();
            return true;
          } 
          url = url + "extraid="+$(this).val()+"&";
                });
          url = "/accountgroups/"+ first +"?_method=delete&" + url;
          document.location.href = url;
        }

