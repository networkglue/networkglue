                                <input type="hidden" name="acs_id" value="<%= $accountgroup->{acs_id} %>">
                                <input type="hidden" name="intermapper_id" value="<%= $accountgroup->{intermapper_id} %>">
                                <input type="hidden" name="ise_id" value="<%= $accountgroup->{ise_id} %>">
                                <div class="panel-footer">
                                <div class="form-group">
                                    <label for="hostname" class="col-sm-4 control-label">Name</label>
                                    <div class="input-group col-sm-8">
                                        <input type="text" class="form-control" name="name" id="name" placeholder="name" value="<%= $accountgroup->{name} %>">
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                </div>

                                <div class="panel-footer">
                                <div class="pull-right"><input type="checkbox" data-toggle="toggle" class="pull-right" data-size="small" name="acs_toggle" value="1"<%= $acs_toggle %>></div>
                                
                                <h5><a href="#" data-toggle="collapse" data-target="#acsattributes" class="accordion-toggle">Cisco ACS Attributes&nbsp;</a></h5>
                                <div id="acsattributes" class="collapse">
                                <div class="form-group">
                                    <label for="acsenabled" class="col-sm-4 control-label">Enabled</label>
                                    <div class="input-group col-sm-8">
                                        <input type="checkbox" id="enabled" name="acs_enabled" value="1"<%= $accountgroup->{"acs_enabled"} %>>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="form-group">
                                    <label for="acsdescription" class="col-sm-4 control-label">Description</label>
                                    <div class="input-group col-sm-8">
                                        <input type="text" class="form-control" id="acsdescription" name="acs_description" placeholder="Description" value="<%= $accountgroup->{"acs_description"} %>">
                                    </div>
                                </div>

                                <div class="clearfix"></div>
                                </div>
                                </div> <!-- Cisco ACS Attributes Panel -->

                                <div class="panel-footer">
                                <div class="pull-right"><input type="checkbox" data-toggle="toggle" class="pull-right" data-size="small" name="ise_toggle" value="1"<%= $ise_toggle %>></div>
                                <h5><a href="#" data-toggle="collapse" class="accordion-toggle" data-target="#iseattributes">Cisco ISE Attributes&nbsp;</a></h5>
                                <div id="iseattributes" class="collapse">

                                <div class="form-group">
                                    <label for="isedescription" class="col-sm-4 control-label">Description</label>
                                    <div class="input-group col-sm-8">
                                        <input type="text" class="form-control disabled" id="isedescription" placeholder="Description" value="<%= $accountgroup->{"ise_description"} %>">
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                </div>
                                </div> <!-- Cisco ISE Attributes Panel -->

                                <div class="panel-footer">
                                <div class="pull-right"><input type="checkbox" data-toggle="toggle" class="pull-right" data-size="small" name="im_toggle" value="1"<%= $im_toggle %>></div>
                                <h5><a href="#" data-toggle="collapse"  class="accordion-toggle" data-target="#intermapperattributes">Intermapper Attributes&nbsp;</a></h5>
                                <div id="intermapperattributes" class="collapse">

                                    <label for="intermapperdescription" class="col-sm-4 control-label">No additional attributes</label>                            
                                <div class="clearfix"></div>
                                </div>
                                </div> <!-- Cisco ISE Attributes Panel -->


                                <div class="panel-footer">                                
                                <div class="form-group">
                                  <div class="col-sm-12">
                                        <a href="/accountgroups/" class="btn btn-default pull-left">Close</a>
                                        <button type="submit" class="btn btn-primary pull-right">Save changes</button>
                                  </div>
                                </div>
                                </form>
                                <div class="clearfix"></div>
                                </div><!-- panel footer -->
                                
                                </div>
                        </div>
